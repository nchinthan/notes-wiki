    <span class="hljs-keyword">return</span> <span class="hljs-literal">NULL</span>;
}

<span class="hljs-type">void</span> *<span class="hljs-title function_">signaler</span><span class="hljs-params">(<span class="hljs-type">void</span> *arg)</span> {
