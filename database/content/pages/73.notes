<span class="hljs-type">int</span> ready = <span class="hljs-number">0</span>;

<span class="hljs-type">void</span> *<span class="hljs-title function_">worker</span><span class="hljs-params">(<span class="hljs-type">void</span> *arg)</span> {
    pthread_mutex_lock(&amp;lock);
    <span class="hljs-keyword">while</span> (!ready) {
        pthread_cond_wait(&amp;cond, &amp;lock);  <span class="hljs-comment">// Sleep until signal</span>
    }
